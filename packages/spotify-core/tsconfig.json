{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strictFunctionTypes": false,
    "lib": [
      "es2019"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "exclude": ["../../node_modules/*", "./node_modules/*", "./dist", "*/**.test.ts",
    "__mocks__"
  ]
}
